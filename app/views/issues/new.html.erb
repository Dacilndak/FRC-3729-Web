<h1>New Issue</h1>

<%= form_for(@issue) do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="text">
    <%= f.label "Parent Task" %>
    <% if Issue.all == [] %>
    No other tasks!
    <% else %>
    <%= select("event", "id", Issue.all.sort {|a, b|  a.id <=> b.id }.collect {|e| [ "Issue #{e.id}", e.id ] }, { :include_blank => true } ) %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', issues_path %>
