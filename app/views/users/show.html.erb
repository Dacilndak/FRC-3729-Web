    <p id="notice"><%= notice %></p>
    
    <p>
      <b>Email:</b>
      <%= @user.email %>
    </p>
    <p>
      <b>First:</b>
      <%= @user.first %>
    </p>
    
    <p>
      <b>Last:</b>
      <%= @user.last %>
